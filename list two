//Вернуть строку без "!"
function removeExclamationMarks(s) {
  let arr =[]
s.split()
for (let i = 0; i < s.length; i++) {
    if (s[i] != '!') {
        arr.push(s[i]);
    }
}
  return arr.join('');
}
//////////////////////////////////////
//The same
function removeExclamationMarks(s) {
  return s.replace(/!/gi, '');
}
